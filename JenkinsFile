pipeline {
    agent any

    environment {
        GITHUB_REPO = 'https://github.com/Agrinsadon/vk4_Koonti'
    }

    tools {
        maven 'maven2'
        jdk 'jdk'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: "https://github.com/Agrinsadon/vk4_Koonti"
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                success {
                    junit '**/target/surefire-reports/TEST-*.xml'

                    jacoco(execPattern: '**/target/jacoco.exec')
                }
            }
        }
    }
}