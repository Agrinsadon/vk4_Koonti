pipeline {
    agent any

    tools {
        maven 'maven2'
        jdk 'jdk'
    }

    options {
        // Set up GitHub webhook to trigger the pipeline on push events
        buildDiscarder(logRotator(artifactNumToKeepStr: '5', numToKeepStr: '10'))
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from GitHub
                echo 'Checking out code...'
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], userRemoteConfigs: [[url: 'https://github.com/Agrinsadon/vk4_Koonti']]])
            }
        }
        stage('Build, Test, and Site') {
            steps {
                echo 'Cleaning...'
                sh 'mvn clean'
                echo 'Compiling...'
                sh 'mvn compile'
                echo 'Testing...'
                sh 'mvn test'
                echo 'Generating site...'
                sh 'mvn site'
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
