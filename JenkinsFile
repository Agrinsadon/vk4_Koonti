pipeline {
    agent any

    tools {
        maven 'maven2'
        jdk 'jdk'
    }

    options {
        buildDiscarder(logRotator(artifactNumToKeepStr: '5', numToKeepStr: '10'))
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], userRemoteConfigs: [[url: 'https://github.com/Agrinsadon/vk4_Koonti']]])
            }
        }
        stage('Build') {
            steps {
                echo 'Cleaning...'
                sh 'mvn clean'
                echo 'Compiling...'
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
        }
        stage('Coverage Report') {
            steps {
                echo 'Generating coverage report...'
                sh 'mvn jacoco:report'
            }
        }
        stage('Site') {
            steps {
                echo 'Generating site...'
                sh 'mvn site'
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
        unstable {
            echo 'Build unstable!'
        }
    }
}
