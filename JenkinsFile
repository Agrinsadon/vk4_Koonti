pipeline {
    agent any

    tools {
        maven 'maven2'
        jdk 'jdk'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Cleaning...'
                sh 'mvn clean'
                echo 'Compiling...'
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'mvn test'
            }
        }
        stage('Site') {
            steps {
                echo 'Generating site...'
                sh 'mvn site'
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
